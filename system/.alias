alias ls='ls -lG'
alias ll='ls -laGh'
alias cl='clear'
alias vim='mvim -v'
alias e=$EDITOR
alias tree='tree -C'

alias ..='cd ..'
alias work='cd ~/workspace'
alias enotes='cd ~/notes && vim . && cd -'
alias notes='cd ~/notes'
alias dot='cd ~/.dotfiles'
alias edot='cd ~/.dotfiles && vim . && cd -'
alias scripts='ls ~/.scripts'
alias scratch='vim ~/notes/$(date +%F).md'

alias tf='terraform'
alias awsid='aws sts get-caller-identity'
alias kc='kubectl'
alias be='bundle exec'
alias dc='docker-compose'
alias vg='vagrant'
alias nctl='lima nerdctl'
